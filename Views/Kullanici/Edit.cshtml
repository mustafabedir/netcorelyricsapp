@model Kullanici
@{
    Layout="~/Views/Shared/_Kullanici.cshtml";
}
<div class="container">
    <h2>Edit Kullanici</h2>
    <br />

    <form asp-controller="Kullanici" asp-action="Edit" method="post">
        <input type="hidden" asp-for="kullaniciID" />
        <div class="form-group">
            <label asp-for="username">Username</label>
            <input asp-for="username" class="form-control" >
        </div>

        <div class="form-group">
            <label asp-for="password">Password</label>
            <textarea asp-for="password" class="form-control"></textarea>
        </div>

        <div class="form-group">
            <label asp-for="ad">Ad</label>
            <textarea asp-for="ad" class="form-control"></textarea>
        </div>

        <div class="form-group">
            <label asp-for="soyad">Soyad</label>
            <textarea asp-for="soyad" class="form-control"></textarea>
        </div>

        <div class="form-group">
            <label asp-for="mail">Mail</label>
            <textarea asp-for="mail" class="form-control"></textarea>
        </div>

        
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>

</div>