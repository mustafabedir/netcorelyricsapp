@model IEnumerable<Sanatci>
@{
    Layout="~/Views/Shared/_Admin.cshtml";
}

<div class="container">
    <h2>Sanatci List</h2>
    <hr />
    <div>
        <a class="btn btn-primary" href="/Admin/SanatciCreate">Create</a>
    </div>
    <hr />
    <div class="row">
        <div class="col">
            @if(Model.Count()>0)
            {
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>AdÄ±</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Sanatci sanatci in Model)
                        {
                            <tr>
                                <td>@sanatci.sanatciID</td>
                                <td>@sanatci.sanatciAd</td>
                                
                                <td>
                                    <a class="btn btn-primary btn-sm" asp-controller="Admin" asp-action="SanatciEdit" asp-route-id="@sanatci.sanatciID">
                                        Details
                                    </a>
                                    <a class="btn btn-danger btn-sm" asp-controller="Admin" asp-action="SanatciDelete" asp-route-id="@sanatci.sanatciID">
                                        Delete
                                    </a>
                                    
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="alert alert-danger">
                    Sanatci Yok
                </div>
            }
        </div>
    </div>
</div>